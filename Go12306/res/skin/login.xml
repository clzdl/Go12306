<?xml version="1.0" encoding="utf-8"?>
<Window caption="0,0,0,40" size="400,195" showshadow="true" shadowimage="main/shadow.png" shadowsize="6" shadowcorner="8,8,8,8">
  <Font id="0" name="微软雅黑" size="12" default="true"/>
  <Font id="1" name="微软雅黑" size="14"/>

  <VerticalLayout bkcolor="#FF555566">
    <HorizontalLayout name="appbar" height="36" inset="6,-1" bkcolor="#FF202223">
	  <Label name="MessageTitle" valign="vcenter" text="用户登录" textcolor="#FFFFFFFF" font="1" />
      <Button name="closebtn" width="39" height="20" tooltip="关闭" normalimage="file='sysbtn/btn_close_normal.png'" hotimage="file='sysbtn/btn_close_highlight.png'" pushedimage="file='sysbtn/btn_close_down.png'"/>
    </HorizontalLayout>
	
	
    <VerticalLayout inset="20,10,20,10">
      <Label name="MessageText" textcolor="#FFFFFFFF" font="1" align="left" valign="vcenter"/>
    </VerticalLayout>
	
	<HorizontalLayout height="40" inset="10,10,10,10">
		<Label name="txtLoginName" width="60" valign="vcenter" text="用户名" textcolor="#FFFFFFFF" font="1" />
        <Edit name="edtLoginName" tipvalue="用户名" style="edit_style"/>
	</HorizontalLayout>
	
	<HorizontalLayout height="40" inset="10,10,10,10">
		<Label name="txtLoginPwd" width="60" valign="vcenter" text="密码" textcolor="#FFFFFFFF" font="1" />
        <Edit name="edtLoginPwd" tipvalue="密码" style="edit_style" password="true" passwordchar="●"/>
	</HorizontalLayout>
	
	
    <HorizontalLayout height="60" inset="10,10,10,10">
      <Control />
      <Button name="btnLogin" font="1" text="登录" height="30" width="75" align="center" valign="vcenter" style="colorbtn_style"/>
      <Button name="btnCancel" font="1" text="取消" height="30" width="75" align="center" valign="vcenter" style="colorbtn_style"/>
	  <Control/>
    </HorizontalLayout>
  </VerticalLayout>
</Window>